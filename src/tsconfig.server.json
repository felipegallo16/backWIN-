{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./server/src",
      "baseUrl": "./server/src",
      "paths": {
        "@/*": ["./server/src/*"]
      },
      "resolveJsonModule": true,
      "incremental": true
    },
    "include": ["server/src/**/*"],
    "exclude": ["node_modules", "dist"]
  }